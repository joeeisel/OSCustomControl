            </StackPanel>-->
            <StackPanel Orientation="Horizontal">
                <!--<Button Content="Click me" Click="Button_Click" Margin="0,10,0,0" HorizontalAlignment="Left"/>
                <Button Content="Open Dialog" Click="OpenDialog_Click" Margin="10,10,0,0" HorizontalAlignment="Left"/>-->
                <Button Content="Open Signature Pad Dialog" Click="OpenSignaturePadDialog_Click" Margin="10,10,0,0" HorizontalAlignment="Left"/>
                <Button Content="Check for Signature Pad" Click="CheckSignaturePad_Click" Margin="10,10,0,0" HorizontalAlignment="Left"/>
                <Button Content="Setup Signature Pad" Click="SetupSignaturePad_Click" Margin="10,10,0,0" HorizontalAlignment="Left"/>
            </StackPanel>
        </StackPanel>
    </Border>
</sdk:Page>
